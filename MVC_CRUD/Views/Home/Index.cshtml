                        $filas += '</tr>'
                    });
                    $("#TablaListado tbody").html($filas);

                }
            });
        };

        //LSITAR CATEGORIAS

        var listCategories = function () {

            $.ajax({
                type: "POST",
                url: '/Product/GetCategories',
                datatype: "json",
                cache: false,
                success: function (data) {
                    console.log(data)
                    var $filas = '';

                    $.each(data, function (i, item) {
                        $("#CategoryT").append('<option value=' + i + '>' + item.CategoryName + '</option>');
                    });
                }
            });
        };
    </script>
</div>